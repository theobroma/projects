@import 'reset'
@import 'variables'
@import 'bootstrap/bootstrap'
@import 'fontawsome/font-awesome'
@import 'sprite'
@import 'forms'
@import 'slider'
/*--------------------------------------------------*\
		# Common
\*--------------------------------------------------*/
body
html
	height 100%
body
	min-height 100%
	background-color #fff
	color #fff
div
	box-sizing border-box
h3
	font-size 24px
h2
	font-size 36px
a
	color #fff
.global-wrap
	min-height 100%
	position relative
/*--------------------------------------------------*\
		# General
\*--------------------------------------------------*/
.b-brown
	background-color brown
.b-dark-blue
	background-color dark-blue
.in
	make-row()
.container-fixed
	container-fixed()
	@media (min-width 1px)
		width 990px
.line-title
	position relative
	z-index 1
	overflow hidden
	text-align center
	text-transform uppercase
	font-size 18px
	&:before
		right 20px
		margin 0 0 0 -100%
		content ''
		display inline-block
		width 100%
		height 1px
		background #404040
		z-index -1
		position relative
		vertical-align middle
	&:after
		left 20px
		margin 0 -100% 0 0
		content ''
		display inline-block
		width 100%
		height 1px
		background #404040
		z-index -1
		position relative
		vertical-align middle
/********************************************************	
					Top
********************************************************/
.navbar
	margin-bottom 35px
.carousel
	&__in
		make-row()
	&__wrapper
		background-color brown
		position relative
.carousel-control
	top 45%
.services
	text-align center
	& .in
		padding 27px 0 45px 0
	h2
		margin-bottom 50px
	&__item
		make-xs-column(3)
	&__circle
		background-color #2c3035
		border-radius 50%
		height 6.25em
		width 6.25em
		line-height 6.25em
		display inline-block
.question
	h3
		font-size 60px
	ul
		margin-top 28px
		li
			display inline-block
			margin-right 5px
	& .in
		padding 122px 0 135px 0
.portfolio
	text-align center
	& .in
		padding 35px 0 68px 0
	&__filter
		display inline-block
		margin-bottom 50px
		width 100%
		li
			display inline-block
			margin-left 5px
			a
				display inline-block
				padding 5px 10px
				text-decoration none
				background-color #2d3035
				box-shadow rgba(34,37,42,1) 0 2px 0
				&.active
					background-color #00bd9d
					box-shadow rgba(0,148,125,1) 0 2px 0
	&__item
		make-xs-column(3)
		padding 10px
		&:nth-child(4n+1)
			margin-right 0%
		&__black-inner
			make-xs-column(12)
			background rgba(0,0,0,0.5)
			height 100%
			padding 11%
		figure
			width 100%
			position relative
			overflow hidden
			img
				width 100%
				display block
				position relative
			figcaption
				padding 12%
				position absolute
				top 0
				bottom 0
				width 100%
				opacity 0
				transition all 0.5s
				h3
					font-size 18px
					font-weight bold
					margin-bottom 4px
		&__type
			display inline-block
			font-size 14px
			margin-bottom 21px
		&:hover figcaption
			opacity 1
	&__list
		display inline-block
		li
			display inline-block
			float left
			margin-right 13px
			a
				@extend .scale
				display inline-block
				&:hover
					color #fff
					text-decoration none
				i
					display inline-block
					margin-right 11px
				span
					vertical-align middle
					font-weight bold
.pricing-table
	h3
		font-size 60px
		margin-bottom -14px
	p
		font-size 40px
		font-weight bold
	& .in
		padding 138px 10px 150px 10px
/*--------------------------------------------------*\
	# Our Pirce 
\*--------------------------------------------------*/
.Our-price
	text-align center
	& .in
	h2
		margin-bottom 45px
.chart
	border-radius 4px
	color #b7b7b7
	& .btn-purchaise
		margin 40px 0 16px 0
	&__big-block
		make-xs-column(4)
		padding 0 28px
		margin-bottom 70px
	&__small-block
		make-xs-column(3)
		margin-bottom 70px
	&__black
		background-color #2c3035
	&__white
		background-color #f4f4f4
		& .spec
			span
				color #5b5b5b
.plan-name
	padding 30px 0
	font-size 20px
.quantity
	font-size 16px
	padding 10px 0
	margin-bottom 34px
	color #fff
	background-color #00bd9d
	font-weight bold
	box-shadow rgba(0,153,127,1) 0 3px 0
.spec
	padding 7px 0
	span
		font-weight bold
.chart
	&__black-top
		& .quantity
			background-color #404040
		& .btn-purchaise
			background-color #e5e5e5
			color #404040
	&__black-bottom
		& .quantity
			color #4bb1a5
			background-color #e5e5e5
		& .btn-purchaise
			background-color #404040
	&__teal
		& .quantity
			background-color #4bb2a5
		& .btn-purchaise
			background-color #4bb2a5
	&__olive
		& .quantity
			background-color #b2c47e
		& .btn-purchaise
			background-color #b2c47e
//Our team		
.our-team
	& .in
		padding 140px 0 147px 0
	h3
		font-size 60px
	p
		font-size 40px
		margin-top -24px
/*--------------------------------------------------*\
	#Clients about us 
\*--------------------------------------------------*/
.recall
	make-xs-column(12)
	&__title
		@extend .line-title
		margin 0 0 45px 0
	&__quotes
		make-xs-column(3)
	&__excerption
		font-size 13px
		color #999999
		make-xs-column(6)
	&__author
		color #9ec622
.quotes-up
	sprite($s-big-quotes-up)
	float right
.quotes-down
	sprite($s-big-quotes-down)
	float left
/*--------------------------------------------------*\
	#About us 
\*--------------------------------------------------*/
.about-us
	text-align center
	h2
		margin-bottom 50px
	& .in
		padding 32px 0 32px 0
	&__item
		make-xs-column(3)
	&__skills
		make-xs-column(12)
		ul
			display inline-block
			li
				display inline-block
				float left
				margin 0 20px
		&__title
			@extend .line-title
			margin 0 0 60px 0
.over-6000
	& .in
		padding 135px 0 140px 0
	h3
		font-size 50px
		font-weight bold
		text-transform uppercase
	p
		font-size 50px
		margin-top -14px
.contact-us
	h2
		text-align center
		margin-bottom 37px
	h3
		border-bottom 2px solid #404040
		font-size 18px
		font-weight bold
		text-transform uppercase
		line-height 35px
		color #fff
	& .in
		padding 34px 0 32px 0
	&__aside
		h3
			margin-bottom 25px
		ul
			color #999999
			li
				margin 0 0 5px 0
				&:nth-child(3n)
					margin 0 0 25px 0
				a
					color #999999
				span
					font-weight bold
.social
	& .in
		padding 117px 0 107px 0
	h3
		font-size 50px
		font-weight bold
		text-transform uppercase
	p
		font-size 50px
		margin-top -14px
	&__list
		li
			display inline-block
			margin-left 1.25em
		a
			background-color #22262a
			border 6px solid #22262a
			border-radius 50%
			height 2.5em
			width 2.5em
			line-height 2em
			display inline-block
			text-align center
			&:hover
				color #22262a
				background-color #a4ce21
			i
				font-size 20px
/********************************************************	
	Footer				
********************************************************/
.footer
	min-height: 108px
	position absolute
	left 0
	bottom 0
	width 100%
	color #5b5b5b
	font-size 14px
	&__top
		background-color dark-blue
		font-weight bold
		&.in
			padding 68px 0 65px 0
		h4
			font-size 14px
			font-weight bold
		h3
			text-transform uppercase
			font-size 17px
			font-weight bold
			border-bottom 1px solid #5b5b5b
			padding 0 0 14px 0
			margin 0 0 25px 0
			color #fff
	&__bottom
		background-color #1c1e22
		&.in
			padding 57px 0 43px 0
	&__tweets
		make-xs-column(4)
		&__item
			margin 0 0 28px 0
			& .fa
				color #a4ce21
				margin-right 10px
				font-size 22px
	&__posts
		make-xs-column(4)
	&__streams
		make-xs-column(4)
		ul
			li
				display inline-block
				float left
				margin 0 8px 8px 0
	&__logo
		make-xs-column(3)
	&__contacts
		make-xs-column(9)
		ul
			li
				display inline-block
				float left
				margin 0 32px 0 0
				a
					color #5b5b5b
					font-size 16px
					color #999999
					span
						font-weight bold