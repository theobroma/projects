        img.portfolio__img.img-responsive.x-img-main(src=imgsrc, alt="pie-chart")
        .portfolio__data
            .portfolio__title Awesome Pie Chart
            .portfolio__category UI Design
        .xoverlay-box
            .xoverlay-data
                img.portfolio__shape-img(src="../images/shape.png", alt="")
